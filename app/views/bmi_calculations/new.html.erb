<div class="container">
  <%= form_with(model: @bmi_calculation, local: true, html: { class: 'mt-5' }) do |form| %>
    <div class="row justify-content-center">
      <%= errors_for(@bmi_calculation) %>
    </div>

    <div class="form-group row justify-content-center">
      <%= form.label :weight, 'Weight', { class: 'col-sm-2 col-form-label' } %>
      <div class="col-sm-6">
        <%= form.text_field :weight, { class: 'form-control', placeholder: '0.0' } %>
      </div>
    </div>

    <div class="d-flex justify-content-center my-5 actions">
      <%= link_to 'Cancelar', dashboard_path, class: 'btn btn-outline mr-1' %>
      <%= form.submit 'Guardar', class: 'btn btn-primary ml-1' %>
    </div>
  <% end %>
</div>
